#!/bin/bash



script=${BASH_SOURCE[0]}

src=${script%/*}

export src

# echo $src

# export PATH=$PATH:$src

# echo $PATH

cd $src/..

[ ! -d "./databases" ] && mkdir ./databases

cd scripts

pwd

select choice in "1: Show available databases" "2: Create new database" "3: Rename a database" "4: Use a database" "5: Drop a database" "6: Disconnect from engine"	
do
		case $choice in 

				"1: Show available databases")
			./show.databases
			;;
				"2: Create new database")
			./create.database
			;;
				"3: Rename a database")
			./rename.database
			;;
				"4: Use a database")
			./use.database
			;;
				"5: Drop a database")
			./drop.database
			;;
				"6: Disconnect from engine")
			echo "You have disconnected from databases"
			exit
			;;
		esac
done
